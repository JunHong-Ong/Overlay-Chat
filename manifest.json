{
    "manifest_version": 3,
    "name": "On-Screen Chat",
    "version": "0.1",
    "description": "Allows user to overlay chat messages over video on Twitch and YouTube.",
    "icons": {
        "16": "icons/icon-16.png",
        "32": "icons/icon-32.png",
        "48": "icons/icon-48.png",
        "128": "icons/icon-128.png"
    },
    "author": "Ong Jun Hong",
    "background": {
        "service_worker": "service-worker.js",
        "type": "module"
    },
    "action": {
        "default_icon": {
            "16": "icons/icon-16.png",
            "32": "icons/icon-32.png",
            "48": "icons/icon-48.png",
            "128": "icons/icon-128.png"
        }
    },
    "content_scripts": [
        {
            "js": [
                "scripts/twitch-socket.js",
                "scripts/overlay-chat.js",
                "scripts/content-script.js"
            ],
            "css":[
                "scripts/content-script.css"
            ],
            "matches": [
                "https://www.twitch.tv/*"
            ],
            "exclude_matches": [
                "https://www.twitch.tv/",
                "https://www.twitch.tv/directory*",
                "https://www.twitch.tv/search*",
                "https://www.twitch.tv/videos/*",
                "https://www.twitch.tv/team/*"
            ]
        }
    ],
    "permissions": ["tabs","storage"],
    "options_page": "options/options.html"
}